<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.streetsmart.app">

    <application
        android:name=".root.StreetsmartApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.leaderboard.LeaderboardActivity"
            android:label="Leaderboard"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            />
        <activity android:name=".activity.rewards.RewardsActivity"
            android:label="My Rewards"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            />
        <activity android:name=".activity.play.PlayActivity"
            android:label="Play"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activity.dashboard.DashboardActivity"
            android:label="Dashboard"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>